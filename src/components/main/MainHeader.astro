---
import Back from "@/icons/Back.astro";
import Forward from "@/icons/Forward.astro";
import Notifications from "@/icons/Notifications.astro";
import MainButtonHeader from "./MainButtonHeader.astro";

---

<header class="flex justify-between h-16 items-center">
  <div class="flex gap-2">
    <MainButtonHeader>
      <Back />
    </MainButtonHeader>
    <MainButtonHeader >
      <Forward />
    </MainButtonHeader>
  </div>
  <div class="flex gap-2">
    <MainButtonHeader >
      <Notifications />
    </MainButtonHeader>
    <button class="flex justify-center items-center h-8 w-8 rounded-full text-text hover:text-white overflow-hidden border border-black">
      <img src="https://images.unsplash.com/photo-1456327102063-fb5054efe647?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="avatar" class="object-cover object-center h-full w-full" />
    </button>
  </div>
</header>